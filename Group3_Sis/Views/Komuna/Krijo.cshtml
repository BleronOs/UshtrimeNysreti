@model Komuna

<form method="post">
    <div class="border">
        <div class="row">
            <h3 class="text-primary">Shtimi i komunes</h3>
        </div>
        <div class="mb-3 p-2">
            <label asp-for="Emri"></label>
            <input asp-for="Emri" class="form-control" />
            <span asp-validation-for="Emri" class="text-danger"></span>
        </div>
        <div class="mb-3 p-2">
            <button type="submit" class="btn btn-success">Ruaj</button>
            <a asp-controller="Komuna" class="btn btn-secondary" asp-action="Listo">Kthehu</a>
        </div>
    </div>
</form>