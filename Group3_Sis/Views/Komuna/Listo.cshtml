@using System.Security.Principal
@model List<Komuna>

<div class="container">
    <div class="row mt-5">
        <div class="col-6 pt-3">
            <h3 class="text-danger"> Lista e komunave </h3>
        </div>
        <div class="col-6 pt-3 text-end">
            <a class="btn btn-success" asp-controller="Komuna" asp-action="Krijo">Shto</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Emri</th>
                <td>Veprimet</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Komuna komuna in Model)
            {
                <tr>
                    <td>@komuna.Id</td>
                    <td>@komuna.Emri</td>
                    <td>
                        <div class="w-75 btn-group">
                            <a class="btn btn-primary mx-1"
                           asp-controller="Komuna"
                           asp-action="Ndrysho"
                           asp-route-komunaId="@komuna.Id">Ndrysho</a>
                            <a class="btn btn-danger mx-1"
                           asp-controller="Komuna"
                           asp-action="Fshi"
                           asp-route-komunaId="@komuna.Id">
                                Fshi
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

